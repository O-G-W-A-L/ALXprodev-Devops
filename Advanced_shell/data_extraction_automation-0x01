#!/bin/bash

# Ensure data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found."
  exit 1
fi

# Extract fields
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height_dm=$(jq '.height' data.json)
weight_hg=$(jq '.weight' data.json)

types=$(jq -r '.types[].type.name' data.json | sed 's/.*/\u&/' | paste -sd ' ' -)

# Format height and weight
height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
weight_kg=$(awk "BEGIN {printf \"%.0f\", $weight_hg / 10}")

# final printout
echo "$name is of type $types, weighs ${weight_kg}kg, and is ${height_m}m tall."
